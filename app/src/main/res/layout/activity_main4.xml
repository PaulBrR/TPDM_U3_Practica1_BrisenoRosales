<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#4c4844"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Pedido"
        android:textSize="30dp"
        android:textColor="#59F1FF"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DESCRIPCION"
        android:textColor="#59F1FF"
        android:id="@+id/descripcionactualizar"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MONTO"
        android:textColor="#59F1FF"
        android:inputType="numberDecimal"
        android:id="@+id/montoctualizar"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FECHA DE VENCIMIENTO"
        android:textColor="#59F1FF"
        android:inputType="date"
        android:id="@+id/fechactualizar"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#59F1FF"
        android:hint="PAGADO "
        android:layout_marginBottom="50dp"
        android:id="@+id/pagadoctualizar"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Modificicacion"
        android:layout_marginBottom="10dp"
        android:id="@+id/actualizar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/regresarctualizar"/>

</LinearLayout>